<!DOCTYPE html>
<html>

<head>
    <title>Book Database</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./assets/css/main.css" rel="stylesheet">
</head>

<body>
   <%- include partials/header.ejs %>

    <div class="container">
        <div class="book-upload">
            <h1>Do you want to upload a book?</h1>
            <form action="/book?_method=PUT" method="POST">
                <div class="form-wrapper">
                    <label>Title</label>
                    <input type="text" placeholder="Title of the book..." name="title" required>
                    <label>Author</label>
                    <input type="text" placeholder="Author of the book..." name="author" required>
                    <label>Cover</label>
                    <input type="file" name="cover">
                    <label>Publisher</label>
                    <input type="text" placeholder="Publisher..." name="publisher" required>
                    <div class="date-input">
                        <label>Release</label>
                        <input type="text" placeholder="----" name="releaseYear" required>
                    </div>

                    <div class="pages-input">
                        <label>Pages</label>
                        <input type="text" placeholder="Pages..." name="pages">
                    </div>

                    <button class="main-btn" type="submit">Submit</button>
                </div>
            </form>

            <div class="book-info">
                <h4>Do you want to see all books that have already been published? Click <a href="/books">here</a></h4>
            </div>
        </div>
    </div>

    <%- include partials/footer.ejs %>
    <script src="../assets/js/mobileview.js"></script>
</body>